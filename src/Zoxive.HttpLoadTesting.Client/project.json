{
    "version": "0.0.6",
    "title": "Zoxive.HttpLoadTesting.Client",
    "description": "HttpLoadTesting http load generator web client",
    "authors": [
        "Kyle Wascher"
    ],

    "dependencies": {
        "Microsoft.NETCore.App": {
            "version": "1.0.1",
            "type": "platform"
        },
        "Microsoft.AspNetCore.Diagnostics": "1.0.0",
        "Microsoft.AspNetCore.Server.Kestrel": "1.0.1",
        "Microsoft.Extensions.Logging.Console": "1.0.0",
        "Microsoft.AspNetCore.Routing": "1.0.1",
        "Microsoft.AspNetCore.Mvc": "1.0.1",
        "Zoxive.HttpLoadTesting.Framework": "0.0.5",
        "Microsoft.Data.Sqlite": "1.0.0",
        "Dapper": "1.50.2",
        "Dapper.Contrib": "1.50.0"
    },

    "tools": {
        "Microsoft.DotNet.Watcher.Tools":  "1.0.0-preview2-final" 
    },

    "frameworks": {
        "netcoreapp1.0": {
            "imports": [
                "dotnet5.6",
                "portable-net45+win8"
            ]
        }
    },

    "buildOptions": {
        "emitEntryPoint": true,
        "preserveCompilationContext": true,
        "warningsAsErrors": true,
        "embed": [
            "wwwroot/index.html",
            "wwwroot/scripts/app.js",
            "wwwroot/scripts/app.js.map"
        ]
    },

    "runtimeOptions": {
        "configProperties": {
            "System.GC.Server": true
        }
    },

    "publishOptions": {
        "include": [
            "wwwroot",
            "web.config"
        ]
    },

    "packOptions": {
        "repository": {
            "type": "git",
            "url": "https://github.com/Zoxive/HttpLoadTesting"
        },
        "licenseUrl": "https://github.com/Zoxive/HttpLoadTesting/blob/master/LICENSE",
        "tags": [
            "load tests", "performance", "http", "rest", "benchmark", "test", "testing", "dotnetcore"
        ]
    },

    "scripts": {
        "prepack": [
            "npm run release"
        ],

        "prepublish": [
            "npm run release"
        ]
    }
}
